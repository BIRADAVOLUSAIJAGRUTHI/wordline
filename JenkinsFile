pipeline {
    agent { 
        node {
            label 'my_pc'
            }
      }
    environment {
        PATH = "C:/Windows/System32"
    }
    triggers {
        pollSCM '* * * * *'
    }
     stages {
        stage('Build') {
            steps {
                echo "Building.."
                bat 'pip install numpy'
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                bat 'python hello.py'
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivery.."
            }
        }
    }
}
